{
  "name": "lovelace-card-boilerplate",
  "version": "0.1.5",
  "description": "Lovelace card boilerplate",
  "main": "dist/my-custom-card.js",
  "files": [
    "/dist"
  ],
  "scripts": {
    "build": "rimraf dist && npm run rollup",
    "release": "rollup --environment release -c",
    "watch": "rollup -c --watch",
    "rollup": "rollup -c --bundleConfigAsCjs"
  },
  "repository": {
    "type": "git",
    "url": "https://github.comtrollix/ha-tmoon-card.git"
  },
  "keywords": [
    "lovelace",
    "card",
    "home",
    "assistant"
  ],
  "author": "Trollix",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/trollix/ha-tmoon-card/issues"
  },
  "homepage": "https://github.com/trollix/ha-tmoon-card#readme",

  "devDependencies": {
    "@rollup/plugin-json": "^6.0.1",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.5",
    "rollup": "^4.6.1",
    "rollup-plugin-import-css": "^3.3.5",
    "rollup-plugin-html-literals": "^1.1.8",
    "@rollup/plugin-terser": "^0.4.4",
    "rollup-plugin-version-injector": "^1.3.3",
    "tslib": "^2.6.2",
    "typescript": "^5.2.2",
    "rimraf": "^5.0.5"
  },
  "dependencies": {
    "lit": "^2.8.0"
  }
}
