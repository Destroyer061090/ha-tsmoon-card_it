{
    "compilerOptions": {
        "target": "es2017",
        "module": "esnext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "alwaysStrict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noImplicitThis": true,
        "strict": true,
        "resolveJsonModule": true,
        "typeRoots": [
            "node_modules/@types"
          ],
        "allowSyntheticDefaultImports": true  // pour utiliser require sans alert
    },
    "include": ["src", "src/img_dec.d.ts","src/suncalc.d.ts"]
}